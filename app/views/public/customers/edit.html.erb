<h1>会員情報編集</h1>
<%= form_with model:@customer, local:true do |f| %>

  <div class="field">
    <%= f.label :last_name, "姓" %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name, "名" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "セイ" %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "メイ" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :nickname, "表示名" %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :sex, "性別" %><br />
    <%= f.label :男 %>
    <%= f.radio_button :sex, :男 %>
    <%= f.label :女 %>
    <%= f.radio_button :sex, :女 %>
  </div>

  <%# 表示方法検討 %>
  <div class="field">
    <%= f.label :birth_date, "生年月日" %><br />
    <%= f.date_select(
        :birth_date,
        use_month_numbers: true,
        start_year: 1950,
        end_year: (Time.now.year),
        default: Date.new(1990, 1, 1),
        date_separator: " / ") %>
  </div>

  <div class="field">
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postcode, autocomplete: "postcode", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_name, "都道府県" %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all,
    :code, :name, { prompt: '選択してください' }, class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :address_city, "市区町村" %><br />
    <%= f.text_field :address_city, autocomplete: "address_city", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address_street, "以降の住所" %><br />
    <%= f.text_field :address_street, autocomplete: "address_street", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address_building, "建物名" %><br />
    <%= f.text_field :address_building, autocomplete: "address_building", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <%= f.submit "変更を保存する" %>

<% end %>